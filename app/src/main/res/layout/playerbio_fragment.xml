<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/profile_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/crest"/>

    <TextView
        android:id="@+id/firstname_text"
        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/profile_picture"
        android:text="John"/>

    <TextView
        android:id="@+id/lastname_text"
        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/firstname_text"
        android:layout_below="@id/firstname_text"
        android:text="Doe"/>

    <TextView
        android:id="@+id/year_text"
        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_picture"
        android:layout_alignParentLeft="true"
        android:text="8 Year Senior"/>

    <TextView
        android:id="@+id/position_text"
        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/year_text"
        android:layout_alignParentLeft="true"
        android:text="leftout"/>

    <TextView
        android:id="@+id/hometown_text"
        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/position_text"
        android:layout_alignParentLeft="true"
        android:text="Nowhere, USA"/>



</RelativeLayout>