<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/profile_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/crest"/>

    <RelativeLayout
        android:id="@+id/profile_name_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/profile_picture">

        <TextView
            android:id="@+id/firstname_text"
            android:textSize="18dp"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="John"
            android:layout_marginBottom="-10dp" />



        <TextView
            android:id="@+id/lastname_text"
            android:textSize="36dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/firstname_text"
            android:text="Doe" />

        <TextView
            android:id="@+id/height_text"
            android:textSize="18dp"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lastname_text"/>

        <TextView
            android:id="@+id/weight_text"
            android:textSize="18dp"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/height_text"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/year_text"
        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_picture"
        android:layout_margin="10dp"
        android:layout_alignParentLeft="true"
        android:textSize="24dp"
        android:layout_marginTop="10dp"
        android:text="8 Year Senior"/>

    <TextView
        android:id="@+id/position_text"
        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/year_text"
        android:layout_margin="10dp"
        android:layout_alignParentLeft="true"
        android:textSize="24dp"
        android:text="leftout"/>

    <TextView
        android:id="@+id/hometown_text"
        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@id/position_text"
        android:textSize="24dp"
        android:layout_alignParentLeft="true"
        android:text="Nowhere, USA"/>



</RelativeLayout>